					function PostarFoto(Usuario,classe,IDF) {
						var param = ["/api/v1/",4,"_",Usuario,"_",classe];
						param = param.join("");
						var IDCol = ["ID",IDF];
						IDCol = IDCol.join("");
						var icone = ["star","ID",IDF]
						icone = icone.join("");
						SendToIndexjs(param,function(data) {
						 document.getElementById(IDCol).innerHTML = data[0];
						 document.getElementById(IDF).src = data[1];						
						 RedimencionarFoto(data[2],data[3],IDF);
						 CheckFavoritos(Usuario,icone,data[0]);
						});
					
					}
					function Get15ID(Usuario,classe,IDF) {
					var param = ["/api/v1/",10,"_",Usuario,"_",classe];
						param = param.join("");
						i = 0;
						var IDCol = [];
						var icone = [];						
						while (i<15){
						IDCol[i] = ["ID",IDF[i]];
						IDCol[i] = IDCol[i].join("");
						icone[i] = ["star","ID",IDF[i]]
						icone[i] = icone[i].join("");
						i = i+1;
						}
						SendToIndexjs(param,function(data) {
							var j = 0;
							while (j<15){
						 document.getElementById(IDCol[j]).innerHTML = data[0][j];
						 document.getElementById(IDF[j]).src = data[1][j];						
						 RedimencionarFoto(data[2][j],data[3][j],IDF[j]);
						 CheckFavoritos(Usuario,icone[j],data[0][j]);
							j = j +1;
							}
						});}
					
					function CheckFavoritos(Usuario,Icone,IDFOTO) {
						var param = ["/api/v1/",5,"_",Usuario,"_",IDFOTO];
						param = param.join("");
					SendToIndexjs(param,function(data){
								if (data == true) {
								document.getElementById(Icone).src = "images/ystar.png";
								}
							else{
								document.getElementById(Icone).src = "images/star.png";											
								}
					});
					
					}
				
				function ExcluirFoto(Usuario,idfoto,idicone) {
						var param = ["/api/v1/",6,"_",Usuario,"_",idfoto];
						param = param.join("");
					SendToIndexjs(param,function(data) {
						document.getElementById(idicone).src = "images/x.png";
					});	
					}
					
					
					
function RedimencionarFoto(Altura,Largura,idf){
						var altura = Altura;
						var comprimento = Largura;
						if (altura/AlturaColuna > comprimento/LarguraColuna){
								document.getElementById(idf).style.width = "100%";
								document.getElementById(idf).style.height  = altura*LarguraColuna/comprimento + "px";
								var h = -(((altura*LarguraColuna/comprimento)-AlturaColuna)/2);
								document.getElementById(idf).style.marginTop = h + "px";
							}
							else if (altura/AlturaColuna <= comprimento/LarguraColuna){
									document.getElementById(idf).style.height = "100%;"
									document.getElementById(idf).style.width = comprimento*AlturaColuna/altura + "px";
									var m = -(((comprimento*AlturaColuna/altura)-LarguraColuna)/2);
									document.getElementById(idf).style.marginLeft = m + "px";
		
						}			
				}
