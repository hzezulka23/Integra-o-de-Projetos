				function GetPath(id,idf){
						var caso = 1;
						var param = ["/api/v1/",1,"_",id,"_",caso];
						param = param.join("");
						var Path = "";
						SendToIndexjs(param,function(data) {
						document.getElementById(idf).src	= 	data;
					});
					}
					
				function GetHeight(id){
