					}
				function GetWidth(id){
						var caso = 3;
						var param = ["/api/v1/",1,"_",id,"_",caso];
						param = param.join("");
					SendToIndexjs(param,function(data) {
					});
					}
					
				function Redimencionar(id,idf){
						var caso = 4;
						var param = ["/api/v1/",1,"_",id,"_",caso];
						param = param.join("");
					SendToIndexjs(param,function(data) {
						var altura = data[0];
						var comprimento = data[1];
						if (altura/AlturaColuna > comprimento/LarguraColuna){
								document.getElementById(idf).style.width = "100%";
								document.getElementById(idf).style.height  = altura*LarguraColuna/comprimento + "px";
								var h = -(((altura*LarguraColuna/comprimento)-AlturaColuna)/2);
								document.getElementById(idf).style.marginTop = h + "px";
							}
							else if (altura/AlturaColuna <= comprimento/LarguraColuna){
									document.getElementById(idf).style.height = "100%;"
									document.getElementById(idf).style.width = comprimento*AlturaColuna/altura + "px";
									var m = -(((comprimento*AlturaColuna/altura)-LarguraColuna)/2);
									document.getElementById(idf).style.marginLeft = m + "px";
		
						}
					});				
				}
					
				function GetLink(id,idlink){
						var caso = 5;
						idimg = document.getElementById(id).innerHTML
						
						var param = ["/api/v1/",1,"_",idimg,"_",caso];
						param = param.join("");
					SendToIndexjs(param,function(data) {
						window.open(data);
						
					});
					}
